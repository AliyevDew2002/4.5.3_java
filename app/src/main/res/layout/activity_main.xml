<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:padding="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserID:"
            android:textSize="22sp"/>

        <EditText
            android:hint="ID:"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_user_id"
            android:id="@+id/et_user_id"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:layout_below="@+id/tv_user_id"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_user_pw"
            android:text="UserPW:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp" />

        <EditText
            android:hint="PW:"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/et_user_id"
            android:layout_toRightOf="@id/tv_user_id"
            android:layout_marginTop="5dp"
            android:id="@+id/et_user_pw"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/login_b_id"
            android:layout_below="@+id/tv_user_pw"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Login"
            android:textSize="22sp" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>